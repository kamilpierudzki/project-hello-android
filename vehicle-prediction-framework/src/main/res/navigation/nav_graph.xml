<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/VehicleTypePickerFragment">

    <fragment
        android:id="@+id/VehicleTypePickerFragment"
        android:name="com.project.hallo.vehicle.prediction.framework.api.VehicleTypePickerFragment"
        android:label="@string/vehicle_type_picker_fragment_lable">

        <action
            android:id="@+id/initialVehicleData"
            app:destination="@id/PredictionFragment">

            <argument
                android:name="vehicleData"
                app:argType="com.project.hallo.city.plan.domain.VehicleData" />

        </action>

    </fragment>

    <fragment
        android:id="@+id/PredictionFragment"
        android:name="com.project.hallo.vehicle.prediction.framework.api.PredictionFragment"
        android:label="@string/prediction_fragment_label">

        <argument
            android:name="vehicleData"
            app:argType="com.project.hallo.city.plan.domain.VehicleData" />

    </fragment>

</navigation>