<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/prediction_nav_graph"
    app:startDestination="@id/vehicle_type_picker_fragment">

    <fragment
        android:id="@+id/vehicle_type_picker_fragment"
        android:name="com.project.hallo.vehicle.prediction.framework.api.VehicleTypePickerFragment"
        android:label="@string/vehicle_type_picker_fragment_lable">

        <argument
            android:name="selectedCityParcelable"
            app:argType="com.project.hallo.city.plan.framework.internal.datamodel.CityPlanParcelable" />

        <action
            android:id="@+id/go_to_prediction_screen"
            app:destination="@id/prediction_fragment">

            <argument
                android:name="vehicleDataParcelable"
                app:argType="com.project.hallo.city.plan.framework.internal.datamodel.VehicleDataParcelable" />

            <argument
                android:name="selectedCityParcelable"
                app:argType="com.project.hallo.city.plan.framework.internal.datamodel.CityPlanParcelable" />

        </action>

    </fragment>

    <fragment
        android:id="@+id/prediction_fragment"
        android:name="com.project.hallo.vehicle.prediction.framework.api.PredictionFragment"
        android:label="@string/prediction_fragment_label">

        <argument
            android:name="vehicleDataParcelable"
            app:argType="com.project.hallo.city.plan.framework.internal.datamodel.VehicleDataParcelable" />

        <argument
            android:name="selectedCityParcelable"
            app:argType="com.project.hallo.city.plan.framework.internal.datamodel.CityPlanParcelable" />

    </fragment>

</navigation>