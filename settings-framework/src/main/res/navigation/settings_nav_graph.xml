<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settings_nav_graph"
    app:startDestination="@id/settings_screen">

    <include app:graph="@navigation/city_plan_nav_graph" />

    <fragment
        android:id="@+id/settings_screen"
        android:name="com.project.hallo.settings.framework.api.SettingsFragment"
        android:label="@string/settings_screen_label">

        <action
            android:id="@+id/go_to_city_picker_screen"
            app:destination="@id/city_plan_nav_graph">

            <argument
                android:name="backButtonDisabled"
                app:argType="boolean" />

        </action>

    </fragment>

</navigation>